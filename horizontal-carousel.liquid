<section>
<div class="container">
<div class="slick-slider">
  {%- for block in section.blocks -%}
    <div class = "slider-wrapper">
        <div class = "carousel-div">
            {%- if block.settings.image !=blank -%}
            <div class = "img-wrapper">
                {{- block.settings.image | image_url: width: block.settings.image.width | image_tag: loading: loading_strategy -}}
            </div>
            {% endif %}
            <div class="element element-1"><h5>{{ block.settings.heading }}</h5><p>{{ block.settings.content }}</p></div>
        </div>
    </div>
  {% endfor %}
</div>
</div>
</section>
{% schema %}
{
  "name": "Horizontal Carousel",
  "tag": "section",
  "class": "horizontal--carousel",
  "settings": [
    {
      "type": "text",
      "id": "section",
      "label": "section"
    }
  ],
    "blocks": [
    {
      "type": "testimonial",
      "name": "Horizontal slider",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Slider Image"
        },        
        {
          "type": "text",
          "id": "heading",
          "label": "Slider Heading"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Slider Content"
        }       

      ]
    }
  ],
  "presets": [
    {
      "name": "Horizontal Carousel"
    }
  ]
}
{% endschema %}